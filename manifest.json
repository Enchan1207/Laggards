{
    "name": "Laggards",
    "description": "追いつくのは、自分が欲したときでいい。",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://mobile.twitter.com/**",
                "https://mobile.twitter.com/**",
                "http://twitter.com/**",
                "https://twitter.com/**"
            ],
            "css": [
                "inject.css"
            ]
        }
    ],
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    }
}